<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".OnlineClassifierActivity"
    android:background="@color/light_gray">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginHorizontal="40dp"
    android:orientation="vertical"
    android:elevation="6dp"
    android:background="@drawable/classify_image_shape">

    <ImageView
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        ></View>
    <Button
        android:id="@+id/classifyBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/camera_btn_shape"
        android:elevation="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="classify The Disease"
        android:textColor="@color/white"


        />
</LinearLayout>

<com.aseem.versatileprogressbar.ProgBar
    android:id="@+id/progBar"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginTop="200dp"
    android:elevation="10dp"
    android:gravity="center"
    android:visibility="invisible"
    app:androidtextColor="@color/colorPrimary"
    app:barType="@drawable/triad_ring"
    app:enlarge="4"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:text="" />

<TextView
    android:id="@+id/prog_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="60dp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>